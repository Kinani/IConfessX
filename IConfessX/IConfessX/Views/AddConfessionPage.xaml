<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IConfessX.Views.AddConfessionPage"
             Title="Add new confession">
  <Grid RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackLayout Grid.Row="0" HorizontalOptions="LayoutOptions.Start" VerticalOptions="LayoutOptions.Start" Padding="10,30,10,5">
      <Label TextColor="#000000" Text="Add new confession"></Label>
    </StackLayout>
    <StackLayout Grid.Row="1" Padding="15,5,0,0">
      <Label TextColor="#000000" Text="Your confession:"></Label>
      <Editor x:Name="newThreadContent"></Editor>
    </StackLayout>
    <Button Grid.Row="2" x:Name="ConfessBtn" Clicked="OnAdd" MinimumHeightRequest="30" Text="Confess now!"></Button>
  </Grid>
</ContentPage>